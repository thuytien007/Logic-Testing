@{
    ViewBag.Title = "Home Page";
}

<h2><strong>Person List</strong></h2>
<h3>Person Detail: </h3>
<h4>Fullname: <strong data-bind="text: fullName"></strong></h4>
<h4>Age Range: <strong data-bind="text: agePeriod()"></strong></h4>
<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("First Name: ")
                </th>
                <th>
                    @Html.DisplayName("Last Name: ")
                </th>
                <th>
                    @Html.DisplayName("Age: ")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: selectedPerson">
            <tr style="cursor:pointer" data-bind="click: $root.selectedUser">
                <td data-bind="text: firstName"></td>
                <td data-bind="text: lastName"></td>
                <td data-bind="text: age"></td>
                <td>
                    <button class="btn btn-danger" data-bind="click: $root.removePerson">Remove</button>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" align="center">
                    <strong>Sum Ages:</strong> <strong class="text-danger font-weigh-bold" data-bind="text: sumAge"></strong>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<hr />
<div>
    <h2><strong>Removed Person List</strong></h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("First Name: ")
                </th>
                <th>
                    @Html.DisplayName("Last Name: ")
                </th>
                <th>
                    @Html.DisplayName("Age: ")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: removedPersonList">
            <tr>
                <td data-bind="text: firstName"></td>
                <td data-bind="text: lastName"></td>
                <td data-bind="text: age"></td>
                <td>
                    <button class="btn btn-info" data-bind="click: $root.undoPerson">Undo</button>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" align="center">
                    <strong>Sum Ages:</strong> <strong class="text-danger font-weigh-bold" data-bind="text: sumAgeRemovedPersonList"></strong>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

<script src="~/Scripts/PersonViewModel.js"></script>