@{
    ViewBag.Title = "Home Page";
}

<h2><strong>Person Selected List</strong></h2>
<label>First Name:</label>
<input type="text" name="firstname" data-bind="value: firstName" />
<label>Last Name: </label>
<input type="text" name="lastname" data-bind="value: lastName" />
<label>Age:</label>
<input type="text" name="age" data-bind="value: age" />
<h3 style="color:orangered">Person Info: </h3>
<h4>Fullname: <strong data-bind="text: fullName"></strong></h4>
<h4>Age Range: <strong data-bind="text: agePeriod()"></strong></h4>
<div>
    <div>
        <div>
            <div class="row">
                <div style="font-weight:bold" class="col-lg-3">
                    @Html.DisplayName("First Name: ")
                </div>
                <div style="font-weight:bold" class="col-lg-3">
                    @Html.DisplayName("Last Name: ")
                </div>
                <div style="font-weight:bold" class="col-lg-3">
                    @Html.DisplayName("Age: ")
                </div>
                <div class="col-lg-3"></div>
            </div>
        </div>
        <div data-bind="foreach: selectedPerson">
            <div class="row" style="cursor:pointer; margin-top:10px;" data-bind="click: $root.objectSelectedRow">
                <div class="col-lg-3" style="background-color: rgba(255,0,0,.1);height:35px" data-bind="text: firstName"></div>              
                <div class="col-lg-3" style="background-color:lightgray;height:35px" data-bind="text: lastName"></div>
                <div class="col-lg-3" style="background-color: rgba(255,0,0,.1);height:35px" data-bind="text: age"></div>
                <div class="col-lg-3">
                    <button class="btn btn-danger" data-bind="click: $parent.selectedUser">Remove</button>
                </div>
            </div>
        </div>
        <footer>
            <div>
                <div class="col-lg-12" align="center">
                    <strong>Sum Ages:</strong> <strong class="text-danger font-weigh-bold" data-bind="text: sumAge"></strong>
                </div>
            </div>
        </footer>
    </div>
</div>
<hr />
<div>
    <h2><strong>Removed Person List</strong></h2>
    <div>
        <div>
            <div class="row">
                <div style="font-weight:bold" class="col-lg-3">
                    @Html.DisplayName("First Name: ")
                </div>
                <div style="font-weight:bold" class="col-lg-3">
                    @Html.DisplayName("Last Name: ")
                </div>
                <div style="font-weight:bold" class="col-lg-3">
                    @Html.DisplayName("Age: ")
                </div>
                <div lass="col-lg-3"></div>
            </div>
        </div>
        <div data-bind="foreach: removedPersonList">
            <div class="row" style="margin-top:10px;">
                <div class="col-lg-3" style="height:35px;background-color: rgba(255,0,0,.1);" data-bind="text: firstName"></div>
                <div class="col-lg-3" style="height:35px;background-color:lightgray;" data-bind="text: lastName"></div>
                <div class="col-lg-3" style="height:35px;background-color: rgba(255,0,0,.1);" data-bind="text: age"></div>
                <div class="col-lg-3">
                    <button class="btn btn-info" data-bind="click: $parent.selectedUndoUser">Undo</button>
                </div>
            </div>
        </div>
        <footer>
            <div>
                <div class="col-lg-12" align="center">
                    <strong>Sum Ages:</strong> <strong class="text-danger font-weigh-bold" data-bind="text: sumAgeRemovedPersonList"></strong>
                </div>
            </div>
        </footer>
    </div>
</div>

<script src="~/Scripts/PersonViewModel.js"></script>