@{
    ViewBag.Title = "Home Page";
}

<h2><strong>Person Selected List</strong></h2>
<h3 style="color:orangered">Person Info: </h3>
<h4>Fullname: <strong data-bind="text: fullName"></strong></h4>
<h4>Age Range: <strong data-bind="text: agePeriod()"></strong></h4>
<div>
    <div>
        <div>
            <div class="row">
                <div class="col-lg-3">
                    @Html.DisplayName("First Name: ")
                </div>
                <div class="col-lg-3">
                    @Html.DisplayName("Last Name: ")
                </div>
                <div class="col-lg-3">
                    @Html.DisplayName("Age: ")
                </div>
                <div class="col-lg-3"></div>
            </div>
        </div>
        <div data-bind="foreach: selectedPerson">
            <div class="row" style="cursor:pointer" data-bind="click: $root.objectSelectedRow">
                <div class="col-lg-3"><input type="text" name="firstname" data-bind="value: firstName"/></div>
                <div class="col-lg-3"><input type="text" name="lastname" data-bind="value: lastName"/></div>
                <div class="col-lg-3"><input type="text" name="age" data-bind="value: age" /></div>
                <div class="col-lg-3">
                    <button class="btn btn-danger" data-bind="click: $parent.selectedUser">Remove</button>
                </div>
            </div>
        </div>
        <footer>
            <tr>
                <td colspan="4" align="center">
                    <strong>Sum Ages:</strong> <strong class="text-danger font-weigh-bold" data-bind="text: sumAge"></strong>
                </td>
            </tr>
        </footer>
    </div>
</div>
<hr />
<div>
    <h2><strong>Removed Person List</strong></h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("First Name: ")
                </th>
                <th>
                    @Html.DisplayName("Last Name: ")
                </th>
                <th>
                    @Html.DisplayName("Age: ")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: removedPersonList">
            <tr>
                <td data-bind="text: firstName"></td>
                <td data-bind="text: lastName"></td>
                <td data-bind="text: age"></td>
                <td>
                    <button class="btn btn-info" data-bind="click: $parent.selectedUndoUser">Undo</button>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" align="center">
                    <strong>Sum Ages:</strong> <strong class="text-danger font-weigh-bold" data-bind="text: sumAgeRemovedPersonList"></strong>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

<script src="~/Scripts/PersonViewModel.js"></script>