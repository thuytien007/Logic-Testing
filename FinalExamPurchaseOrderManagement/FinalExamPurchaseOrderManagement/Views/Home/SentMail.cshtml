@{
    ViewBag.Title = "SentMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="smSubject">Sent Mail Page</h2>

<h3 class="smTitle">Email Purchase Order(s) to Supplier(s) for deal ref</h3>
<div style="margin-left:30px">
    <div class="col-lg-5">
        <div class="row divRow">
            <div class="col-lg-1 divCol">
            </div>
            <div class="col-lg-2 divCol">
                PO Num:
            </div>
            <div class="col-lg-3 divCol">
                Supplier:
            </div>
            <div class="col-lg-3 divCol">
                Stock Site:
            </div>
            <div class="col-lg-3 divCol">
                Post Code:
            </div>
        </div>
        <div class="row box2 mCenter">
            <div class="col-lg-1 divCol">
                <input type="checkbox" name="sent-mail" data-bind="checked: SentEmail" disabled />
            </div>
            <div class="col-lg-2 divCol" data-bind="text: OrderNo"></div>
            <div class="col-lg-3 divCol" data-bind="text: SupplierCode"></div>
            <div class="col-lg-3 divCol" data-bind="text: StockSiteCode"></div>
            <div class="col-lg-3 divCol" data-bind="text: PostCode"></div>
        </div>
    </div>
    <div class="col-lg-7">
        <form class="smForm">
            <div class="smNum">
                <p>Purchase Order <span>@TempData["OrderNo"]</span></p>
            </div>
            <div class="smSpace">
                <div class="form-group row">
                    <div class="col-lg-2"><label class="col-sm-1">From:</label></div>
                    <div class="col-lg-4">
                        <input type="email" class="form-control maxWidth" placeholder="From Email...">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-2"><label class="col-sm-1">To:</label></div>
                    <div class="col-lg-4">
                        <input type="email" class="form-control maxWidth" placeholder="To Email...">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-2"><label class="col-sm-1">Cc:</label></div>
                    <div class="col-lg-4">
                        <input type="email" class="form-control maxWidth" placeholder="Cc...">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-2"><label class="col-sm-1">Subject:</label></div>
                    <div class="col-lg-4">
                        <input type="email" class="form-control maxWidth" placeholder="Subject...">
                    </div>
                </div>
                <div>
                    <textarea rows="10" class="form-control maxWidth smTexarea" placeholder="Content..."></textarea>
                </div>
            </div>
        </form>
        <div class="smButton">
            <button class="btn btn-success"><span class="glyphicon glyphicon-envelope"></span>Sent Email</button>
            <button class="btn btn-secondary"><span class="glyphicon glyphicon-ban-circle"></span><a href="@Url.Action("Index","Home")">Sent Email Later, go to PO tab</a></button>
        </div>
    </div>
</div>