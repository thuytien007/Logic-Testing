@{
    ViewBag.Title = "Home Page";
}

<script src="~/Scripts/ViewModel/POViewModel.js"></script>

<div id="index" style="margin-top:50px">
    <h2><strong>Purchasing Order List</strong></h2>
    <div style="margin-top:30px">
        <div class="row divRow">
            <div class="col-lg-1 divCol">
                Order No:
            </div>
            <div class="col-lg-1 divCol">
                Supplier:
            </div>
            <div class="col-lg-2 divCol">
                Stock Site:
            </div>
            <div class="col-lg-3 divCol">
                Stock Name:
            </div>
            <div class="col-lg-2 divCol">
                Order Date:
            </div>
            <div class="col-lg-2 divCol">
                Last Update:
            </div>
            <div class="col-lg-1 divCol">
                Sent Mail:
            </div>
        </div>
        <div id="show-data" data-bind="foreach: resultFromGetPOList">
            <div class="row box" style="text-align:center">
                <div class="col-lg-1 divCol">
                    <a data-bind="attr: { href: '../Home/Details/' + OrderNo}"><span data-bind="text:OrderNo"></span></a>
                </div>
                <div class="col-lg-1 divCol" data-bind="text: SupplierCode"></div>
                <div class="col-lg-2 divCol" data-bind="text: StockSiteCode"></div>
                <div class="col-lg-3 divCol" data-bind="text: StockSiteName"></div>
                <div class="col-lg-2 divCol" data-bind="text: OrderDate"></div>
                <div class="col-lg-2 divCol" data-bind="text: LastUpdate"></div>
                <div class="col-lg-1 divCol">
                    <input type="checkbox" name="sent-mail" data-bind="checked: SentEmail" disabled />
                </div>
            </div>
        </div>
    </div>
    @*this use for dialog jquery
          <div id="dialog-confirm" title="Delete this item?">
              <p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>This item will be permanently deleted and cannot be recovered. Are you sure?</p>
        </div>*@

    @*this use for bootstrap dialog*@
    <div class="modal fade" id="dialog-confirm" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Delete Dialog</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure about delete it???
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bind="click: $root.deletePerson">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
